<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.title %></td>
        <td><%= card.description %></td>
        <td><%= card.project %></td>
        <td><%= link_to 'Show', project_card_path(@project, card) %></td>
        <td><%= link_to 'Edit', edit_project_card_path(@project, card) %></td>
        <td><%= link_to 'Destroy', project_card_path(@project, card), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_project_card_path(@project) %>
